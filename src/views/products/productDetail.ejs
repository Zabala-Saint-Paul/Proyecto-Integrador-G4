<html>
    
    <!-- HEAD-->

	  <%- include('./../partials/head') %> 

	  <!-- HEAD -->
   
    
    <body>
          <!-- HEADER-->

	  <%- include('./../partials/header') %> 

	  <!-- HEADER -->
        
        
        
  <main>
  <div style="padding-top: 10em" class="divTitu">


      </div>      
            <div class="two-column-product">
                <ul id="ulImagenes"> 
                  <h2 id="nombreViaje"><%=products.nombre%></h2>
                    <li> <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/<%= products.imagen_id %>" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="images/2-product.jpg" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="d-block w-100" src="images/3-product.jpg" alt="Third slide">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                        </a>
                      </div>  </li>
                      <h3><%=products.descripcion%></h3>
                </ul>

                <ul class="column-right-side">
                    <li id="precioPasaje" class="precio"> <%=products.precio%></li>
                    <!--
                    <li>ingrese su mail</li>             
                    <li> <input type="email" placeholder="example@mail.com"></li>
                    -->
                    <li class="txt-productDetail"> Contactate, conocé los mejores paquetes  pensados ​​para vos .</li>
                    <li class="txt-productDetail"> <i class="fas fa-credit-card"></i>Pagá en hasta 12 cuotas</li>
                    <li class="txt-productDetail"><i class="fab fa-cc-visa fa-2x"></i><i class="fab fa-cc-paypal fa-2x"></i><i class="fab fa-cc-mastercard fa-2x"></i><i class="fab fa-cc-amex fa-2x"></i></li>
                    <li class="txt-productDetail"><a href="#">Mas informacion</a></li>
                    <li><button type="button" class="btn btn-primary btn-lg">Proximos Vuelos</button></li>
                    <li><button id="contratar" type="button" class="btn btn-primary btn-lg"> Agregar al Carrito </button></li>
                    <li>
                      <button id="cancelar" type="button" class="btn-primary btn-lg"> Cancelar compra </button>
                    </li>
                    <% if (locals.isLogged) {%>
                    <div class="btEliminar">  
                      <li><button type="button" class="btn btn-primary btn-lg"> <a class="editProduc" href="/edit/<%= products.id %>" class="action-button edit">Editar</a></button></li>
                      <form  action="/delete/<%= products.id %>?_method=DELETE" method="POST" >
                        <button class="btn btn-primary btn-lg" type="submit" >Eliminar</button>
                      </form>
                    </div>
                    <% } %>
                </ul>
            </div>
  <br>
        </main>
        <script src="./../../js/carrito.js"></script>
        <script src="./../../js/carrito2.js"></script>
    </body>
    <!-- FOOTER -->

	<%- include('./../partials/footer') %>

	<!-- FOOTER -->

</html>