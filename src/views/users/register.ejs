<html>
    
    <!-- HEAD-->

	  <%- include('./../partials/head') %> 

	  <!-- HEAD -->
    
    <body>
        
         <!-- HEADER-->

	  <%- include('./../partials/header') %> 

	  <!-- HEADER -->
        
        <main>
            <h1 id = "crearCuenta">Crear Cuenta</h1>
            <form class="regForm" action="/users" method="post" enctype="multipart/form-data">
                <ul id = "ulReg">
                    <li class = "liReg">
                        <input class="form-control  <%= locals.errors && errors.firstName ? 'is-invalid':null %>" 
                        name="firstName" 
                        placeholder="Nombre" 
                        value="<%= locals.oldData ? oldData.firstName :null %>"/>
                        <% if (locals.errors && errors.firstName) {%>
                             
                            <p style='color:red'><%= errors.firstName.msg %></p>
                            
                            
                            <%}%>
                    </li>
                    <li class = "liReg">
                        <input name="lastName" 
                        placeholder="Apellido" 
                        class="form-control  <%= locals.errors && errors.lastName ? 'is-invalid':null %>"
                        value="<%= locals.oldData ? oldData.lastName :null %>" />
                        <% if (locals.errors && errors.lastName) {%>
                             
                            <p style='color:red'><%= errors.lastName.msg %></p>
                            
                            
                            <%}%>
                    </li>
                    <li class = "liReg">
                        <input name="email" 
                        type="email" 
                        placeholder="Correo Electronico" 
                        value="<%= locals.oldData ? oldData.email :null %>" 
                        class="form-control  <%= locals.errors && errors.email ? 'is-invalid':null %>"/>
                        <% if (locals.errors && errors.email) {%>
                             
                            <p style='color:red'><%= errors.email.msg %></p>
                          
                          
                          <%}%>
                    </li>
                    <li class = "liReg">
                        <input name="password" 
                        type="password" 
                        placeholder="Contraseña" 
                        class="form-control  <%= locals.errors && errors.password ? 'is-invalid':null %>"/>
                        <% if (locals.errors && errors.password) {%>
                             
                            <p style='color:red'><%= errors.password.msg %></p>
                          
                          
                          <%}%>
                    </li>
                    <div class="div_botonHijoscrear">
						<input type="file" name="image"></input>
                        <% if (locals.errors && errors.image) {%>
                             
                            <p style='color:red'><%= errors.image.msg %></p>
                          
                          
                          <%}%>
					</div>
                    <br>
                    <li class="liReg">
                        <button id="crear" type="submit" class="btn btn-primary">Crear</button>
                    </li>
                    <br>
                    <li class="liReg">
                        <span id="tenesCuenta">¿Ya tenés una cuenta?</span>
                        <a href="/users/login">Ingresá</a>
                    </li>
                    <br>
                    <li class="liReg">
                        <a href = '/'>Volver a la tienda</a>
                    </li>
                </ul>
            </form>
        </main>           
    </body>

<!-- FOOTER -->

<%- include('./../partials/footer') %>

<!-- FOOTER -->
</html>