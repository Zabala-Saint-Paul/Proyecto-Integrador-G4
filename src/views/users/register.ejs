<html>
    
    <!-- HEAD-->

	  <%- include('./../partials/head') %> 

	  <!-- HEAD -->
    
    <body>
        
         <!-- HEADER-->

	  <%- include('./../partials/header') %> 

	  <!-- HEADER -->
        
        <main>
            <h1 id = "crearCuenta">Crear Cuenta</h1>
            <form class="regForm" action="/users/register" method="post">
                <ul id = "ulReg">
                    <li class = "liReg">
                        <div>
                            
                            <input type="text" placeholder="Nombre" name="firstName" 
                            class="form-control  <%= locals.errors && errors.firstName ? 'is-invalid':null %>"/><br>
                            <% if (locals.errors && errors.firstName) {%>
                                             
                                <p style='color:red'><%= errors.firstName.msg %></p>
                                
                                
                                <%}%>
                            </div>
                    </li>
                    <li class = "liReg">
                        
                        <div>
                            
                            <input type="text" placeholder="Apellido" name="lastName" value="<%= locals.oldData ? oldData.lastName :null %>"
                            class="form-control  <%= locals.errors && errors.lastName ? 'is-invalid':null %>"/><br>
                            <% if (locals.errors && errors.lastName) {%>
                                             
                                <p style='color:red'><%= errors.lastName.msg %></p>
                                
                                
                                <%}%>
                            </div>
                    </li>
                    <li class = "liReg">
                        
                        <div>
                            
                            <input type="text" placeholder="email" name="email" value="<%= locals.oldData ? oldData.email :null %>"
                            class="form-control  <%= locals.errors && errors.email ? 'is-invalid':null %>"/><br>
                            <% if (locals.errors && errors.email) {%>
                                             
                                <p style='color:red'><%= errors.email.msg %></p>
                                
                                
                                <%}%>
                            </div>
                    </li>
                    <li class = "liReg">
                        
                        <div>
                            
                            <input type="password" placeholder="password" name="password" value="<%= locals.oldData ? oldData.password :null %>"
                            class="form-control  <%= locals.errors && errors.password ? 'is-invalid':null %>"/><br>
                            <% if (locals.errors && errors.password) {%>
                                             
                                <p style='color:red'><%= errors.password.msg %></p>
                                
                                
                                <%}%>
                            </div>

                    </li>
                    <br>
                    <li>
                        <button id="crear" type="submit" class="btn btn-primary">Crear</button>
                    </li>
                    <br>
                    <li>
                        <span id="tenesCuenta">¿Ya tenés una cuenta?</span>
                        <a href="/login">Ingresá</a>
                    </li>
                    <br>
                    <li>
                        <a href = '/'>Volver a la tienda</a>
                    </li>
                </ul>
            </form>
            <br>
        </main>                
    </body>

<!-- FOOTER -->

<%- include('./../partials/footer') %>

<!-- FOOTER -->
</html>