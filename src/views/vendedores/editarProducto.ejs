
<html>

	
	<!-- HEAD-->

	<%- include('./../partials/head') %> 

	<!-- HEAD -->

	
<body>
	<!-- HEADER-->

	<%- include('./../partials/header') %> 

	<!-- HEADER -->
<main >
	<div class="divCrear">
		<h2 id="login" >Editando viaje a : <%= products.nombre %> </h2> 
	</div>
		<div class="formEdit">
			<form class="editarProducto" action="/edit/<%=products.id%>?_method=PUT"  method="post" enctype="multipart/form-data">
				<div>
					<div class="div_hijocrear" >
						<label for="name" >Nombre del producto:</label>
						<input class="name input1 input1crear form-control" type="text" id="name" name="name"  value="<%= products.nombre %>"  >
						
					</div>
					<div class="div_hijocrear" >
						<label for="price" >Precio del producto:</label>
						<input class="price input1 input1crear form-control" type="text" id="price" name="price"  value="<%= products.precio %>" >
						
					</div>
                    <div class="div_hijocrear" >
						<label for="fecha" >Fecha del Viaje:</label>
						<input class="fecha input1 input1crear form-control" type="date" id="fecha" name="fecha" value="<%=products.fecha%>"  >
						
					</div>
                    <div class="div_hijocrear" >
						<label for="capacidad" >Capacidad:</label>
						<input class="capacidad input1 input1crear form-control" type="number" id="capacidad" name="capacidad"  value="<%=products.capacidad_nave %>" >

					</div>
					<div class="div_hijo">
						<label  for="description" >Descripci√≥n:</label>
						<textarea class="description input1 input1crear form-control"  name="description" id="description"   ><%= products.descripcion %></textarea>
					</div>

					<div class="div_botonHijos" >
						<input class="image input1" type="file" name="image" required></input>
						<% if (locals.errors && errors.image) {%>
						 
							<p style='color:red'><%= errors.image.msg %></p>
						  
						  
						  <% } %>
					<!-- DIV por cada elemento que compone el forms -->
					<br>
					<br>
					<div >
					<div class="div_botonHijoscrear" >
						<button type="submit"  class="btn btn-primary" >Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
		<br>
</main>
<script src="./../../js/vEditarProducto.js"></script>
<script src="./../../js/carrito.js"></script>
</body>	
	<!-- FOOTER-->

	<%- include('./../partials/footer') %> 

	<!-- FOOTER -->
</html>