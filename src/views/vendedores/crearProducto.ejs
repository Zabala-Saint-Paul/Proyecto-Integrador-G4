<html>

	
	<!-- HEAD-->

	<%- include('./../partials/head') %> 

	<!-- HEAD -->

	
<body>
	<!-- HEADER-->

	<%- include('./../partials/header') %> 

	<!-- HEADER -->
<main >
	<div class="divCrear">
		<h2 id="login" >Formulario de Viajes a Ofrecer</h2>
	</div>
		<div class="formEdit">
			<form action = "/" method="POST" enctype="multipart/form-data">
				<div>
					<div class="div_hijocrear" >
						<label for="name" >Nombre del producto:</label>
						<input value="<%= locals.oldData ? oldData.name :null %>" class="input1crear form-control <%= locals.errors && errors.name ? 'is-invalid':null %>" type="text" id="name" name="name" placeholder="Ej: VIaje a Marte" >
						<% if (locals.errors && errors.name) {%>
                             
                            <p style='color:red'><%= errors.name.msg %></p>
                          
                          
                          <%}%>
					</div>
					<div class="div_hijocrear" >
						<label for="price" >Precio del producto:</label>
						<input value="<%= locals.oldData ? oldData.price :null %>" class="input1crear form-control <%= locals.errors && errors.price ? 'is-invalid':null %>" type="text" id="price" name="price" placeholder="Ej: 123000000" >
						<% if (locals.errors && errors.price) {%>
                             
                            <p style='color:red'><%= errors.price.msg %></p>
                          
                          
                          <%}%>
					</div>
					<!--
					<div class="div_hijocrear" >
						<label for="discount" >Descuento:</label>
						<input value="<%= locals.oldData ? oldData.discount :null %>" class="input1crear form-control" type="text" id="discount" name="discount" placeholder="Ej: 30" >
					</div>
					-->
					<!--
					<div class="div_hijocrear" >
						<label for="category" >Categoría:</label>
						<select class="input1crear form-control" name="category" id="category" >
							<option value="">Elegí</option>
							<option value="in-sale">En oferta</option>
							<option value="visited">Últimos agregados</option>
						</select>
					</div>
					-->
					<div class="div_hijocrear" >
						<label for="fecha" >Fecha del viaje:</label>
						<input value="<%= locals.oldData ? oldData.fecha :null %>" class="input1crear form-control <%= locals.fecha && errors.fecha ? 'is-invalid':null %>" type="date" id="fecha" name="fecha" placeholder="dia/mes/año" >
						<% if (locals.errors && errors.fecha) {%>
                             
                            <p style='color:red'><%= errors.fecha.msg %></p>
                          
                          
                          <%}%>
					</div>
					<div class="div_hijocrear" >
						<label for="capacidad" >capacidad de la nave:</label>
						<input value="<%= locals.oldData ? oldData.capacidad :null %>" class="input1crear form-control <%= locals.capacidad && errors.capacidad ? 'is-invalid':null %>" type="number" id="capacidad" name="capacidad" placeholder="Asientos disponibles" >
						<% if (locals.errors && errors.capacidad) {%>
                             
                            <p style='color:red'><%= errors.capacidad.msg %></p>
                          
                          
                          <%}%>
					</div>
					<div class="div_hijocrear" >
						<label for="description" >Descripción:</label>
						<textarea class="input1crear form-control <%= locals.errors && errors.description ? 'is-invalid':null %>" name="description" id="description" ><%= locals.oldData ? oldData.description :null %></textarea>
						<% if (locals.errors && errors.description) {%>
                             
                            <p style='color:red'><%= errors.description.msg %></p>
                          
                          
                          <%}%>
					</div>
					<div class="div_botonHijoscrear">
						<input type="file" name="image"></input>
						<% if (locals.errors && errors.image) {%>
                             
                            <p style='color:red'><%= errors.image.msg %></p>
                          
                          
                          <%}%>
					</div>
					<div class="div_botonHijoscrear" >
						<button type="submit"  class="btn btn-primary" >Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
		<br>
</main>
</body>	
	<!-- FOOTER-->

	<%- include('./../partials/footer') %> 

	<!-- FOOTER -->
</html>